extends base
block append head
    script(src="/js/login.js" type="module" defer)
block body
    main
        form.form.login
            h1 Signin to iCon
            label(for='email')
                p Email
                .input-wrap
                    i.fas.fa-user-alt
                    input#email(type='text')
            label(for='password')
                p Password
                .input-wrap
                    i.fas.fa-key
                    input#password(type='text')
            .link
                a(href='/forgetPassword')  Forget Password
            button#login-btn Login
            .link
                | Do not have account? 
                a(href='/signup') Signup
