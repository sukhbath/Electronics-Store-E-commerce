extends base
block body
    main
        form.form.login
            h1 Login to iCon
            label(for='email')
                p Email
                .input-wrap
                    i.fas.fa-envelope
                    input#email(type='text')
            label(for='password')
                p Password
                .input-wrap
                    i.fas.fa-key
                    input#password(type='text')
            .link
                a(href='/forgetPassword')  Forget Password
            button#login-btn Login
            .link
                | Do not have account? 
                a(href='/signup') Signup
