extends base
block body
    main
        #resetPassword
            form.form#resetPassword-form
                h1 Reset Password
                label(for='tempPassword')
                    p Temp Password
                    .input-wrap
                        i.fas.fa-key
                        input#tempPassword(type='text' )
                label(for='password')
                    p New Password
                    .input-wrap
                        i.fas.fa-key
                        input#password(type='text' )
                label(for='confirmPassword')
                    p Confirm Password
                    .input-wrap
                        i.fas.fa-key
                        input#confirmPassword(type='text' )
                button#resetPassword-btn Update Password
                .link
                    a(href="/forgetPassword") Send Temp Password Again
